<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    tools:context=".ui.NewDate2Fragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <CalendarView
            android:id="@+id/calendarnewdate"
            android:layout_width="346dp"
            android:layout_height="294dp"
            android:layout_marginTop="25dp"
            android:background="#027183"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtuserND" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvtimes"
            android:layout_width="346dp"
            android:layout_height="73dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_confirmlayout"
            android:foregroundGravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendarnewdate" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="74dp"
            android:layout_height="64dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/ic_baseline_person_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtuserND"
            android:layout_width="84dp"
            android:layout_height="53dp"
            android:layout_marginTop="54dp"
            android:background="@drawable/shape_emp_nosel"
            android:gravity="center"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtservND"
            android:layout_width="154dp"
            android:layout_height="53dp"
            android:layout_marginTop="54dp"
            android:background="@drawable/shape_txt"
            android:gravity="center"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/txtuserND"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/butback_fnd_2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:text="@string/txtConfirm"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rvtimes" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="346dp"
            android:layout_height="164dp"
            android:background="@drawable/shape_confirmlayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <TextView
                android:id="@+id/txtdiaFC"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_horas"
                android:gravity="center"
                android:textColor="#1C3F98"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtprecioFC"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginStart="88dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_horas"
                android:gravity="center"
                android:textColor="#1C3F98"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txthoraFC" />

            <TextView
                android:id="@+id/txthoraFC"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_horas"
                android:gravity="center"
                android:textColor="#1C3F98"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.31"
                app:layout_constraintStart_toEndOf="@+id/txtdiaFC"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buteditFC"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/ic_baseline_check_circle_outline_24"
                android:backgroundTint="#009688"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>